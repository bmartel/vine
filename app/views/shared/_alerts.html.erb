<% if notice.present? || alert.present? %>
<div data-controller="alerts" class="sticky top-0 z-10">
  <% if notice.present? %>
  <div data-alerts-target="alert" class="flex items-center justify-center w-full bg-green-50">
    <div class="flex items-center flex-1 px-4 py-2 text-green-900 sm:gap-6 max-w-7xl">
      <div class="flex items-center flex-1 gap-4">
        <svg class="w-6 h-6 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span><%= notice %></span>
      </div>

      <%= button_tag class: "transition ease-out duration-150 p-2 rounded-full hover:bg-green-100 flex items-center justify-center ml-2", data: { action: "alerts#dismiss" } do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      <% end %>
    </div>
  </div>
  <% end %>

  <% if alert.present? %>
  <div data-alerts-target="alert" class="flex items-center justify-center w-full bg-red-50">
    <div class="flex items-center flex-1 px-4 py-2 text-red-900 sm:gap-6 max-w-7xl">
      <div class="flex items-center flex-1 gap-4">
        <svg class="w-6 h-6 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <span><%= alert %></span>
      </div>

      <%= button_tag class: "transition ease-out duration-150 p-2 rounded-full hover:bg-red-100 flex items-center justify-center ml-2", data: { action: "alerts#dismiss" } do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<% end %>
