<div class="flex flex-col px-6 mt-4 text-sm space-y-1">

  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "text-gray-700 hover:underline hover:text-black" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-gray-700 hover:underline hover:text-black" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-700 hover:underline hover:text-black" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Resend confirmation instructions?", new_confirmation_path(resource_name), class: "text-gray-700 hover:underline hover:text-black" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Resend unlock instructions?", new_unlock_path(resource_name), class: "text-gray-700 hover:underline hover:text-black" %>
  <% end %>

</div>
