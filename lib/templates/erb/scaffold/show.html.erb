<%% if notice.present? %>
<div class="sticky top-0 z-10 flex items-center justify-center w-full bg-green-50">
  <div id="notice" class="flex items-center flex-1 p-4 text-green-900 sm:gap-6 max-w-7xl">
    <div class="flex items-center flex-1 gap-4">
      <svg class="w-6 h-6 text-green-500" fill="currentColor" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <span><%%= notice %></span>
    </div>

    <%%= button_tag class: "transition ease-out duration-150 p-2 mt-1 rounded-full hover:bg-green-100 mr-2 flex items-center justify-center ml-2" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
    <%% end %>
  </div>
</div>
<%% end %>

<%% if alert.present? %>
<div class="sticky top-0 z-10 flex items-center justify-center w-full bg-red-50">
  <div id="alert" class="flex items-center flex-1 p-4 text-red-900 sm:gap-6 max-w-7xl">
    <div class="flex items-center flex-1 gap-4">
      <svg class="w-6 h-6 text-red-500" fill="currentColor" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <span><%%= alert %></span>
    </div>

    <%%= button_tag class: "transition ease-out duration-150 p-2 mt-1 rounded-full hover:bg-red-100 flex items-center justify-center ml-2" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
    <%% end %>
  </div>
</div>
<%% end %>

<div class="sticky top-0 z-10 flex items-center justify-center w-full bg-white sm:mt-10">
  <div class="flex items-center justify-between flex-1 p-4 max-w-7xl">
    <%%= link_to <%= index_helper %>_path, class: "transition ease-out duration-150 p-2 mt-1 rounded-full bg-white hover:bg-gray-200 mr-2 flex items-center justify-center" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
    <%% end %>
    <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "transition ease-out duration-150 p-2 mt-1 rounded-full bg-white hover:bg-gray-200 flex items-center justify-center ml-2" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
    <%% end %>
  </div>
</div>


<div class="flex items-center justify-center w-full mt-10">
  <div class="w-full max-w-7xl sm:px-4">
    <dl class="w-full px-4 overflow-hidden bg-white sm:shadow sm:rounded-lg">
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">

        <dt class="text-sm font-medium text-gray-500 uppercase">
          <%= attribute.human_name %>
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:text-base sm:mt-0 sm:col-span-2">
        <% if attribute.attachment? -%>
          <%%= link_to @<%= singular_table_name %>.<%= attribute.column_name %>.filename, @<%= singular_table_name %>.<%= attribute.column_name %> if @<%= singular_table_name %>.<%= attribute.column_name %>.attached? %>
        <% elsif attribute.attachments? -%>
          <%% @<%= singular_table_name %>.<%= attribute.column_name %>.each do |<%= attribute.singular_name %>| %>
            <div><%%= link_to <%= attribute.singular_name %>.filename, <%= attribute.singular_name %> %></div>
          <%% end %>
        <% else -%>
          <%%= @<%= singular_table_name %>.<%= attribute.column_name %> %>
        <% end -%>
        </dd>
      </div>
<% end -%>
    </dl>
  </div>
</div>
